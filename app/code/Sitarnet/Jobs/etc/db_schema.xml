<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
  <table name="sitarnet_department" resource="default" engine="innodb" comment="Department management for jobs module">
    <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Department Id"/>
    <column xsi:type="varchar" name="name" nullable="false" length="255" default="" comment="Department name"/>
    <column xsi:type="text" name="description" nullable="false" comment="Department description"/>
    <constraint xsi:type="primary" referenceId="PRIMARY">
      <column name="entity_id"/>
    </constraint>
  </table>
</schema>
